files:
  /etc/nginx/.htpasswd:
    mode: "000755"
    owner: root
    group: root
    content: |
      user:$apr1$teybuolm$ZRfS8R7RiXvUtjF0vb2yV0
      user2:$apr1$teybuolm$ZRfS8R7RiXvUtjF0vb2yV0

  /tmp/deployment/01_body_size.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 10M;

  /tmp/deployment/02_basic_auth_dev_or_staging.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
        listen       80;
        server_name  localhost;
        location / {
          proxy_pass            http://127.0.0.1:5000;
          proxy_set_header      X-app ci-demo;
          proxy_set_header      Host $host;
          proxy_set_header      X-Forwarded-For $proxy_add_x_forwarded_for;
          auth_basic            "Restricted";
          auth_basic_user_file  /etc/nginx/.htpasswd;
        }
      }

container_commands:
  01_move_nginx_conf_01_body_size:
    command: 'mv /tmp/deployment/01_body_size.conf /etc/nginx/conf.d/01_body_size.conf'
  02_move_nginx_conf_02_basic_auth_dev_or_staging:
    command: 'mv /tmp/deployment/02_basic_auth_dev_or_staging.conf /etc/nginx/conf.d/02_basic_auth_dev_or_staging.conf'
    test: '[ "${ENV_NAME}" == "develop" ] || [ "${ENV_NAME}" == "staging" ]'
  03_add_nginx_auth:
    command: '/tmp/deployment/add_nginx_auth.sh'
  04_restart_nginx:
    command: 'service nginx restart'