files:
  /etc/nginx/.htpasswd:
    mode: "000755"
    owner: root
    group: root
    content: |
      user:$apr1$3xrlf8ad$0P60r8qQF2oZ0gA/OjH9Y.

  /etc/nginx/conf.d/app.conf:
    mode: "000755"
    owner: root
    group: root
    content: |
        server {
            listen       80;
            server_name  localhost;
            location / {
                proxy_pass        http://127.0.0.1:5000;
                proxy_set_header  Host $host;
                proxy_set_header  X-me true;
                proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
            }
        }

  /tmp/deployment/add_nginx_auth.sh:
    mode: "000755"
    content: |
      if [ "$ENV" == "develop" ] || [ "$ENV" == "staging" ]; then
        sed -i 's/$proxy_add_x_forwarded_for;/$proxy_add_x_forwarded_for;\n   auth_basic "Restricted";\n    auth_basic_user_file \/etc\/nginx\/.htpasswd;\n/' /etc/nginx/conf.d/app.conf
      fi

container_commands:
  01_add_nginx_auth:
    command: "/tmp/deployment/add_nginx_auth.sh"
  02restart_nginx:
    command: "service nginx restart"